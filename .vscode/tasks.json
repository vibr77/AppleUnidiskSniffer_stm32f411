            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build UF2",
            "type": "shell",
            "command": "python3 ./uf2conv/uf2conv.py -c -f 0x57755a57 ./build/AppleIISDiskII_stm32f411_sdio.hex -o ./build/AppleIISDiskII_stm32f411_sdio.UF2",
            "dependsOn": "Build Hex",
