{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sniffer",
            "type": "shell",
            "command": "make -f Makefile",
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Bootloader DiskII",
            "type": "shell",
            "command": "make -f Makefile USE_BOOTLOADER=1",
